<% simple_form_for(@plant) do |f| %>
  <% f.error_notification %>

  <div class= "form-inputs">
    <% f.input :name %>
  </div>

  <div class= "form-inputs">
    <% f.input :description %>
  </div>

  <div class= "form-inputs">
    <% f.input :care_instructions %>
  </div>

  <div class= "form-inputs">
    <% f.input :price %>
  </div>

  <div class= "form-actions">
    <% f.button :submit %>
  </div>

<%end%>
