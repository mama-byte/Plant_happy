<%= simple_form_for @plant  do |f| %>

    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :care_instructions %>
    <%= f.input :price %>
    <%= f.input :longitude %>
    <%= f.input :latitude %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit, class: "btn btn-ghost" %>

<%end%>
